@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Castellano.Web.UI.Models.Home.Login

<div id="navbar" class="navbar-collapse collapse">
    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "navbar-form navbar-right loginVerticalMiddleAling", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="form-group">
                @Html.TextBoxFor(m => m.RUN, new { @id = "run", @placeholder = "R.U.N.", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Iniciar sesión</button>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="checkbox rememberMe">
                    <label>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group fontForgotPassword">
                @Html.ActionLink("¿olvido su password?", "RecoveryPass", "Home")
            </div>
        </div>
        <div class="row">
            <div class="form-group text-danger">
                @Html.ValidationSummary()
            </div>
        </div>
    }
</div><!--/.navbar-collapse -->